{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Countries that have hosted S-Tier Counter-Strike Tournaments",
    "subtitle": "Hover over a country to see the latest winner of the latest tournament hosted there",
    "font": "Squada One",
    "fontWeight": "normal",
    "fontSize": 24,
    "subtitleFontSize": 16,
    "anchor": "start",
    "color": "#000000"
  },  
  "layer": [
    {
      "params": [
        { 
          "name": "hover",
          "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
        }
      ],
      
      "data": {
        "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-HW9/refs/heads/main/ne_10m_admin_0_countries_lakes.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries_lakes"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-HW9/refs/heads/main/major-tournamentsv1.csv"
            },
            "key": "Country",
            "fields": ["Location","Country", "Winner"]
          },
          "default": 0
        },
        {
          "calculate": "datum.Country != null ? 'Yes' : 'No'",
          "as": "Has_Hosted"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Has_Hosted",
          "type": "nominal",
          "legend": {"title": "Have Hosted S-Tier Tournament?"},
          "scale": {
            "domain": ["Yes", "No"],
            "range": ["#FBAC18", "lightgrey"]
          }
        }, 
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "Location"},
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Winner", "type": "nominal", "title": "Latest Winner"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-HW9/refs/heads/main/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke": "black", "opacity":0.9, "strokeWidth": 1, "fill": null}
    }
  ],
  "width": 1400,
  "height": 700,
  "projection": {"type": "naturalEarth1"}
}
